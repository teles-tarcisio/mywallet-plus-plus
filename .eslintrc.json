{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
             }
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "import/prefer-default-export": false,
        "import/extensions": [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ]        
    }
}
